<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.libms.controllers.StaffController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Library Staff Sign Up" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <VBox spacing="10" maxWidth="300">
        <Label text="Name"/>
        <TextField fx:id="nameInput" promptText="Enter your name"/>

        <Label text="Email"/>
        <TextField fx:id="emailInput" promptText="Enter your email"/>

        <Label text="Password"/>
        <PasswordField fx:id="passwordInput" promptText="Enter your password"/>
    </VBox>

    <Button text="Sign Up" onAction="#handleSignUpAction" style="-fx-font-size: 14px;"/>

</VBox>
